{
    "name": "someson/phalcon4-boilerplate",
    "description": "Boilerplate project structure using Phalcon PHP Framework v.4.x",
    "type": "project",
    "authors": [
        {
            "name": "Volodymyr Kharkov",
            "email": "somevov4ik@gmail.com",
            "role": "Developer"
        }
    ],
    "license": "MIT",
    "support": {
        "source": "https://github.com/someson/phalcon4-boilerplate",
        "issues": "https://github.com/someson/phalcon4-boilerplate/issues",
        "wiki": "https://github.com/someson/phalcon4-boilerplate/wiki"
    },
    "require": {
        "ext-curl": "*",
        "ext-intl": "*",
        "ext-json": "*",
        "ext-pdo": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Library\\": "library/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Unit\\": "tests/unit/"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "platform": {
            "php": "7.4"
        }
    },
    "require-dev": {
        "codeception/codeception": "^4.1",
        "codeception/module-asserts": "^1.1",
        "codeception/module-phalcon4": "^1.0",
        "codeception/module-phpbrowser": "^1.0",
        "phalcon/ide-stubs": "^4.0"
    }
}
